<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-yellow-100 mb-4">
        <svg class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h2 class="text-3xl font-extrabold text-gray-900">
        QuickBooks Disconnected
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Your QuickBooks Online connection has been removed.
      </p>
    </div>

    <!-- Info Box -->
    <div class="rounded-md bg-blue-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm text-blue-700">
            Your data is safe. You can reconnect anytime to resume syncing with QuickBooks Online.
          </p>
        </div>
      </div>
    </div>

    <!-- Sign in with Intuit -->
    <div class="space-y-4">
      <div>
        <p class="text-sm font-medium text-gray-700 mb-3 text-center">
          Sign in to reconnect:
        </p>
        <%= link_to auth_qbo_sso_connect_path, id: 'qbo-sso-button',
            class: 'group relative w-full flex justify-center items-center border-0 bg-transparent p-0 transition-opacity hover:opacity-80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-2',
            data: { turbo: false } do %>
          <%= image_tag "qbo/Sign_in_blue_btn_med_default.svg",
                        alt: "Sign in with Intuit",
                        class: "sign-in-intuit-default h-12 w-auto" %>
          <%= image_tag "qbo/Sign_in_blue_btn_med_hover.svg",
                        alt: "Sign in with Intuit",
                        class: "sign-in-intuit-hover h-12 w-auto hidden" %>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Or</span>
        </div>
      </div>

      <!-- Regular Sign In -->
      <div class="text-center">
        <%= link_to "Sign in with email", new_user_session_path,
                    class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>

    <!-- Connect to QuickBooks (for logged-in users) -->
    <% if user_signed_in? && !current_user.qbo_connected? %>
      <div class="border-t border-gray-200 pt-6">
        <p class="text-sm font-medium text-gray-700 mb-3 text-center">
          Already signed in? Reconnect to QuickBooks:
        </p>
        <%= link_to auth_qbo_connect_path, class: "flex justify-center transition-opacity hover:opacity-80" do %>
          <%= image_tag "qbo/C2QB_green_btn_med_default.svg", alt: "Connect to QuickBooks", class: "h-12" %>
        <% end %>
      </div>
    <% end %>

    <!-- Footer Links -->
    <div class="text-center text-sm">
      <p class="text-gray-600">
        Need help?
        <%= mail_to "support@flowtap.com", "Contact Support",
                    class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
      <p class="mt-2">
        <%= link_to "Back to Home", root_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
  </div>
</div>
