<!DOCTYPE html>
<html class="h-full bg-gray-50">
  <head>
    <title>Freelancer Accounting</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full">
    <% if user_signed_in? %>
      <!-- Logged in layout with sidebar -->
      <div class="flex h-screen bg-gray-50">
        <!-- Sidebar -->
        <nav class="w-64 bg-white shadow-sm flex-shrink-0 h-full">
          <div class="flex flex-col h-full">
            <!-- Logo/Brand -->
            <div class="flex items-center justify-center h-16 px-4 border-b border-gray-200">
              <%= link_to "Freelancer Accounting", dashboard_path, class: "text-xl font-bold text-gray-900" %>
            </div>
            
            <!-- Navigation Links -->
            <div class="flex-1 px-4 py-6 space-y-1 overflow-y-auto">
              <%= link_to auth_qbo_connect_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-700 hover:text-gray-900 hover:bg-gray-50" do %>
                <svg class="mr-3 h-6 w-6 text-gray-400 group-hover:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
                Connect QBO
              <% end %>
            </div>
            
            <!-- User profile link at bottom -->
            <div class="px-4 py-4 border-t border-gray-200">
              <%= link_to edit_user_registration_path, class: "w-full flex items-center text-sm rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <div class="h-8 w-8 rounded-full bg-blue-600 flex items-center justify-center text-white text-sm font-medium">
                  <%= current_user.initials %>
                </div>
                <div class="ml-3 text-left">
                  <p class="text-sm font-medium text-gray-700 group-hover:text-gray-900"><%= current_user.full_name.presence || current_user.email %></p>
                </div>
              <% end %>
            </div>
          </div>
        </nav>

        <!-- Main content area -->
        <div class="flex-1 flex flex-col overflow-hidden">
          <!-- Admin impersonation banner -->
          <% if admin_impersonating? %>
            <div class="bg-yellow-400 px-4 py-2">
              <div class="flex items-center justify-between text-sm">
                <div class="flex items-center">
                  <span class="font-medium text-yellow-900">
                    ⚠️ You are impersonating <%= current_user.full_name.presence || current_user.email %> 
                    as admin <%= impersonating_admin_user&.display_name %>
                  </span>
                </div>
                <div>
                  <%= link_to "Stop Impersonating", stop_impersonating_admin_users_path, 
                      method: :delete,
                      class: "font-medium text-yellow-900 underline hover:text-yellow-800" %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Flash messages -->
          <% if notice %>
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3" role="alert">
              <span class="block sm:inline"><%= notice %></span>
            </div>
          <% end %>
          
          <% if alert %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3" role="alert">
              <span class="block sm:inline"><%= alert %></span>
            </div>
          <% end %>

          <!-- Main content -->
          <main class="flex-1 overflow-y-auto">
            <% if controller_name == 'home' && action_name == 'index' %>
              <%= yield %>
            <% else %>
              <div class="py-6 px-4 sm:px-6 lg:px-8">
                <%= yield %>
              </div>
            <% end %>
          </main>
        </div>
      </div>
    <% else %>
      <!-- Admin impersonation banner -->
      <% if admin_impersonating? %>
        <div class="bg-yellow-400 px-4 py-2">
          <div class="max-w-7xl mx-auto flex items-center justify-between text-sm">
            <div class="flex items-center">
              <span class="font-medium text-yellow-900">
                ⚠️ You are impersonating <%= current_user.full_name.presence || current_user.email %> 
                as admin <%= impersonating_admin_user&.display_name %>
              </span>
            </div>
            <div>
              <%= link_to "Stop Impersonating", stop_impersonating_admin_users_path, 
                  method: :delete,
                  class: "font-medium text-yellow-900 underline hover:text-yellow-800" %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Flash messages -->
      <% if notice %>
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= notice %></span>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= alert %></span>
        </div>
      <% end %>

      <!-- Logged out layout with top navigation -->
      <nav class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex items-center">
              <%= link_to "Freelancer Accounting", root_path, class: "text-xl font-bold text-gray-900" %>
            </div>
            
            <div class="flex items-center space-x-4">
              <%= link_to "Login", new_user_session_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Sign up", new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Main content -->
      <main class="flex-1">
        <% if controller_name == 'home' && action_name == 'index' %>
          <%= yield %>
        <% else %>
          <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <%= yield %>
          </div>
        <% end %>
      </main>
    <% end %>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 hidden">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Product</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Features</a></li>
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Pricing</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Support</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Documentation</a></li>
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Contact</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Company</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">About</a></li>
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Privacy</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Legal</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Terms</a></li>
              <li><a href="#" class="text-base text-gray-500 hover:text-gray-900">Privacy Policy</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 border-t border-gray-200 pt-8">
          <p class="text-base text-gray-400 text-center">
            &copy; <%= Date.current.year %> Freelancer Accounting. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
